extends ../layout

block content
  h1=title
  p
    a.button(href="../patrons/add") Create New Patron
  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        - var name = `${patron.first_name} ${patron.last_name}`
        tr
          td
            a(href=`../patrons/${patron.id}`)=name
          td=patron.address
          td=patron.email
          td=patron.library_id
          td=patron.zip_code
