extends ../layout

block content
  h1=title
  p
    a.button(href="../books/add") Create New Book
  p Filters 
    a(href="../books/?filter=all") All 
    ||
    a(href="../books/?filter=overdue")  Overdue 
    ||
    a(href="../books/?filter=checked_out")  Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
      tbody
        if books
          each book in books
            tr
              td
                a(href=`../books/${book.id}`) #{book.title}
              td=book.author
              td=book.genre
              td=book.first_published
        else
          tr
            td No Matches Found
              