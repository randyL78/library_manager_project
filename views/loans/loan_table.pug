table
  thead
    tr
      th Book
      th Patron
      th Loaned On
      th Return By
      th Returned On
      th Action
  tbody
    if loans 
      each loan in loans
        tr
          td
            a(href=`../books/${loan.book_id}`)=loan.book_id
          td
            a(href=`../patrons/${loan.patron_id}`)=loan.patron_id
          td=loan.loaned_on
          td=loan.return_by
          td=loan.returned_on
          td 
            a.button(href="/") Return Book
    else
      tr
        td No loans found